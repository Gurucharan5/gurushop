<p id="notice"><%= notice %></p>


 


<div class="container ">
   <div class="row">
  <% @instruments.each do |instrument| %>
      <div class="col-md-4">
          <div class="card mb-4 box-shadow">
               
               <p><b><%= instrument.title %></b></p>
   
            <div class="instrument-thumb">
                <%= link_to image_tag(instrument.image_url(:thumb)), instrument %>

                 <% if instrument.condition? %>
                    <div >
                        <span class="bg-dark"><%= instrument.condition %></span>
                    </div>
                <% end %>
            </div>
   

                <div class="card-body">
                  <p><b><%= instrument.brand %></b></p>
                  <p><b><%= instrument.model %></b></p>
                  <p><b><%= instrument.color %></b></p>
                  <p class="card-text description">
                    <%= instrument.description %>
                  </p>
                  <small>Sold by <%= instrument.user.name%></small>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', instrument %></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_instrument_path(instrument) %></button>
                    </div>
                    <small class="text-muted"><%= number_to_currency(instrument.price) %></small>
                  </div>
 
                </div>
 
              </div>
            </div>
  <% end %>
        </div>
</div>

 
<br>

