<div>
	<div>
		<%= line_item.quantity %>
	</div>
	<div>
		<figure class="figure">
			<%= image_tag(line_item.instrument.image_url(:thumb))%>
		</figure>
	</div>
	<div>
		<strong><%=line_item.instrument.title%></strong>
		<div>
			<div>
				<%= truncate(line_item.instrument.description,length: 140) %>
			</div>
			<div>
				<strong><%= number_to_currency(line_item.total_price)%></strong>
			</div>
		</div>
	</div>
</div>

<div>
	<%= link_to "Revome Item", line_item, method: :delete ,data:{confirm: "Are you sure to delete"}, class:"btn btn-danger"%>
</div>

<hr>